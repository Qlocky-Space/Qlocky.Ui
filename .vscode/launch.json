        {
            "name": "Target - Debug App",
            "presentation": {
                "hidden": false,
                "group": "Target",
                "order": 1
            },
            "type": "cppdbg",
            "request": "launch",
            "envFile": "${workspaceFolder}/.env",
            "preLaunchTask": "Qlocky: Prepare Target",
            "program": "${workspaceRoot}/build/QlockyApp",
            "stopAtEntry": true,
            "stopAtConnect": false,
            "miDebuggerServerAddress": "192.168.0.14:2000",
            "cwd": "${workspaceRoot}",
            "externalConsole": false,
            "linux": {
                "MIMode": "gdb",
                "miDebuggerPath": "${env:OECORE_NATIVE_SYSROOT}/usr/bin/aarch64-poky-linux/aarch64-poky-linux-gdb"
            }
        }
    ]
