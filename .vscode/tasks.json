{
    "version": "2.0.0",
    "options": {
        "env": {
            "ENV_FILE": "${workspaceFolder}/.env",
        }
    },
    "tasks": [
        {
            "label": "Qlocky: Publish App",
            "type": "shell",
            "hide": true,
            "command": "set -a; . \"$ENV_FILE\"; ${workspaceFolder}/.vscode/tasks/task_prepare_target.sh /usr/local/bin/QlockyApp",
            "runOptions": {
                "instanceLimit": 1
            },
            "problemMatcher": {
                // https://stackoverflow.com/questions/68169916/vs-code-start-gdbserver
                "pattern": [
                    {
                        "regexp": ".",
                        "file": 1,
                        "location": 2,
                        "message": 3
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*Process*",
                    "endsPattern": "^.*Listening*"
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "isBackground": true,
        },
        {
            "label": "CMake: Build",
            "hide": true,
            "type": "cmake",
            "command": "build",
            "targets": [
                "ALL_BUILD"
            ],
            "group": "build",
            "problemMatcher": [],
        },
        {
            "label": "Qlocky: Prepare Target",
            "hide": true,
            "detail": "Build & Run application on Target",
            "type": "shell",
            "dependsOrder": "sequence",
            "dependsOn": [
                "CMake: Build",
                "Qlocky: Publish App"
            ]
        }
    ]
}